FROM ghcr.io/foxxmd/multi-scrobbler:latest

# Home Assistant add-on labels
LABEL io.hass.version="1.0.0"
LABEL io.hass.name="Multi-Scrobbler"
LABEL io.hass.description="Scrobble music plays from multiple sources to Last.fm and Listenbrainz."

# Expose default port
EXPOSE 9078

# Entrypoint is handled by the base image
